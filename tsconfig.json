{
  "compilerOptions": {
    // Input & Output
    "rootDir": "./src",
    "outDir": "./dist",

    // Language & Module
    "target": "ES2020",          
    "module": "commonjs",        
    "esModuleInterop": true,     

    // Type Checking
    "strict": true,              
    "skipLibCheck": true,        

    // Debugging
    "sourceMap": true,           

    // Node environment
    "types": ["node"]            
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
